{
    "name": "My Translate Extension",
    "version": "1.0",
    "description": "Translates all foreign text in a website to English",
    "permissions": ["activeTab", "https://translate.googleapis.com/"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts": ["background.js"]
    },
    "manifest_version": 2
}
